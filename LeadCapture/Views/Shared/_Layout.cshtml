@model LeadCapture.Models.CustDetail
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags always come first -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <!-- <link rel="icon" href="favicon.png" type="image/png">
    <link rel="shortcut icon" href="favicon.ico" type="img/x-icon"> -->

    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700" rel="stylesheet">
    <link href=@Url.Content("~/content/css/bootstrap.css") rel="stylesheet" type="text/css">
    <link href=@Url.Content("~/content/css/style.css") rel="stylesheet" type="text/css">
    <link href=@Url.Content("~/content/css/responsive.css") rel="stylesheet" type="text/css">


    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body style="display:none;">
    
    <!--request_call_back popup-->

    <div class="modal fade" id="requestCallModal" role="dialog">

        <div class="modal-dialog">

            <div class="modal-content">
                <form id="requestCallForm" novalidate>
                    <div class="modal-header">
                        <button type="button" class="close_button" data-dismiss="modal"><img src=@Url.Content("~/Content/img/close.png") alt="close"></button>
                        <h4 class="modal-title">Request a call back</h4>
                    </div>
                    <div class="modal-body">
                        <div class="col-sm-6 from_detailTextres">
                            <label>Name</label>
                            <input type="text" data-validation="required" name="firstName" id="firstName" placeholder="Enter full name" class="inputform2"
                                   required />
                        </div>
                        <div class="col-sm-6 from_detailTextres">
                            <label>Email</label>
                            <input type="text" data-validation="email" name="email" id="email" placeholder="Enter email" class="inputform2" required />
                        </div>
                        <div class="clr"></div>

                        <div class="col-sm-6 from_detailTextres">
                            <label>Phone Number</label>
                            <input type="text" name="homePhone" id="homePhone" data-validation="ukphone" placeholder="Enter phone number" class="inputform2"
                                   required />
                        </div>
                        <div class="col-sm-6 from_detailTextres">
                            <label>Best Time To Call</label>
                            <select class="inputform2" name="contactTime" id="contactTime" data-validation="required">
                                <option value="">Select...</option>
                                <option value="1">Morning</option>
                                <option value="2">Afternoon</option>
                                <option value="3">Evening</option>
                                <option value="4">Anytime</option>
                            </select>
                        </div>
                        <div class="clr"></div>
                        <input type="hidden" id="LeadCategory" name="LeadCategory" value="3">
                        <div class="popup_botton_div">
                            <div class="btnName" style="display:none;">Call me back</div>
                            <input type="submit" id="requestSubmit" class="submit_button" value="Call me back">
                        </div>
                    </div>
                    <div class="modal-body2" style="display:none">
                        <img src=@Url.Content("~/Content/img/susic.png") alt="" class="" />
                        <h3>Message sent successfully </h3>
                    </div>
                </form>
            </div>

        </div>

    </div>

    <!--End request_call_back popup-->
    <!--header-->
    <div class="header">
        <div class="container" style="position:relative;">
            <div class="col-sm-5">
                <h1>Logo</h1>
            </div>
            <div class="col-sm-7 no-padding">
                <h2 class="callusText">Call Us : <span>000000 00000</span></h2>
            </div>
            <div class="clr"></div>
            <div class="reqButton">
                <a href="#" data-toggle="modal" data-target="#requestCallModal">




                    <i><img src=@Url.Content("~/Content/img/req_icon.png") alt="callbackicon" /></i> &nbsp; Request a call back
                </a>
            </div>
        </div>
    </div>
    <!--end_header-->
    <div class="clr"></div>
   
    @RenderBody()
    <!--footer-->
    <div class="footer">
        <div class="container">
            <ul>
                <li><a href="javascript:void(0);">About Us</a></li>
                <li>|</li>
                <li><a href="javascript:void(0);">Contact Us </a></li>
                <li>|</li>
                <li><a href="T&Cs.html">Terms & Conditions</a></li>
                <li>|</li>
                <li><a href="privacy_policy.html">Privacy Policy</a></li>
                <li>|</li>
                <li><a href="javascript:void(0);"> How it works</a></li>
                <div class="clr"></div>
            </ul>
            <p>
                Think carefully before securing other debts against your home. Your home may be repossessed if you do not keep up repayments on a mortgage or debt secured on it.
            </p>
